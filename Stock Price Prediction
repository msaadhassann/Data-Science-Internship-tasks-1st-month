import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import yfinance as yf
import math
from sklearn.preprocessing import MinMaxScaler
from sklearn.metrics import mean_squared_error
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense, LSTM

# 1. DATA COLLECTION
# Downloads Apple stock data directly (Fixes FileNotFoundError)
df = yf.download('AAPL', start='2015-01-01', end='2024-01-01')

# 2. PREPROCESSING
# Use 'Close' (capitalized) to avoid KeyError
df_close = df.reset_index()['Close'] 

# LSTM is sensitive to the scale of data; normalize between 0 and 1
scaler = MinMaxScaler(feature_range=(0,1))
df_close = scaler.fit_transform(np.array(df_close).reshape(-1,1))

# 3. TRAIN-TEST SPLIT
# For time series, we split chronologically rather than randomly
training_size = int(len(df_close) * 0.65)
train_data, test_data = df_close[0:training_size,:], df_close[training_size:len(df_close),:1]

# 4. DATASET CREATION
# Create a sliding window (100 days) to predict the next day
def create_dataset(dataset, time_step=1):
    dataX, dataY = [], []
    for i in range(len(dataset)-time_step-1):
        a = dataset[i:(i+time_step), 0]
        dataX.append(a)
        dataY.append(dataset[i + time_step, 0])
    return np.array(dataX), np.array(dataY)

time_step = 100
X_train, y_train = create_dataset(train_data, time_step)
X_test, ytest = create_dataset(test_data, time_step)

# Reshape input to [samples, time steps, features] for LSTM
X_train = X_train.reshape(X_train.shape[0], X_train.shape[1], 1)
X_test = X_test.reshape(X_test.shape[0], X_test.shape[1], 1)

# 5. BUILD STACKED LSTM MODEL
# 
model = Sequential()
model.add(LSTM(50, return_sequences=True, input_shape=(100, 1))) # Layer 1
model.add(LSTM(50, return_sequences=True))                       # Layer 2
model.add(LSTM(50))                                             # Layer 3
model.add(Dense(1))                                             # Output
model.compile(loss='mean_squared_error', optimizer='adam')

# 6. TRAINING
model.fit(X_train, y_train, validation_data=(X_test, ytest), epochs=10, batch_size=64, verbose=1)

# 7. EVALUATION
# Predict and transform back to original price scale
train_predict = model.predict(X_train)
test_predict = model.predict(X_test)

train_predict = scaler.inverse_transform(train_predict)
test_predict = scaler.inverse_transform(test_predict)

# Calculate Root Mean Squared Error (RMSE)
# Re-scale y_train/ytest for true error calculation
y_train_rescaled = scaler.inverse_transform(y_train.reshape(-1,1))
y_test_rescaled = scaler.inverse_transform(ytest.reshape(-1,1))

print("-" * 30)
print("Train RMSE:", math.sqrt(mean_squared_error(y_train_rescaled, train_predict)))
print("Test RMSE:", math.sqrt(mean_squared_error(y_test_rescaled, test_predict)))
